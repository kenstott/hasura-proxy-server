{
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es2020",
      "webworker"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.deno.ts"
  ]
}